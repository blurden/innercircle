<h1>My Contacts <span><%= link_to '(List)', root_path, class: "heading-link" %></span></h1>

<div id="contacts">
	<% @contacts.each do |contact| %>
		<div class="box">
			<%= link_to (image_tag contact.file_url(:radar)), contact %>
			<p class="contact-name">
				<%= contact.name.cap_words %>
			</p>
			<% if current_user == contact.user %>
				<p>
					<%= link_to 'Edit', edit_contact_path(contact) %>
					<%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %>
				</p>
			<% end %>
		</div>
	<% end %>
</div>
